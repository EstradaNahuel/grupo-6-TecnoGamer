<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/productdetail.css" />
    <title>Detalles del producto</title>
</head>
<body>
    <%- include('../partials/header') %>
    <a href="/products/detail/<%= product.Id %>"></a>
    <h3>Detalle de Producto</h3>
    <div class="product-detail">
        <img src="/imagenes/<%= product.Imagen %>" alt="Imagen del producto" class="product-detail__img">
        <div class="product-detail__info">
            <p class="product-detail__title"><%= product.Nombre %></p>
            <p class="product-detail__description"><%= product.Descripcion %></p>
            <p class="product-detail__category">Categoría: <%= product.Idcategoria %></p>
            <p class="product-detail__color">Color: <%= product.Color %></p>
            <span class="product-detail__price">$<%= product.Precio %></span>
            <a href="/productcart"></a>
            <button class="product-detail__add-to-cart">Añadir al carrito</button>
            <a href="/products/edit/<%= product.Id %>" class="">
              <button>Editar productos</button>
            </a>
            <a href="/products/delete/<%= product.Id %>" class="">
                <button>Eliminar productos</button>
              </a>
        </div>        
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
